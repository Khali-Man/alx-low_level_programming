#include "main.h"
/**
 * print_sign - print sign of a number
 * @n: parameter to be printed
 * Return: 1 if n is greater than zero and return 0 if n is zero anmd return -1 if n is less than zero
*/
int print_sign(int n)
{
if (n > 0)
{
_putchar('+');
return (1);
}
else if (n == 0)
{
_putchar('0');
return (0);
}
else
{
_putchar('-');
return (-1);
}
}
